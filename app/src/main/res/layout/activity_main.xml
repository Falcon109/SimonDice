<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="41dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Puntajemax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PuntajeMax"
            android:textColor="#EFA632"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NumPuntajemax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/NumPuntajeMax"
            android:textColor="#EFA632"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Nivelmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/NivelMax"
            android:textColor="#EFA632"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NumNivelmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/NumNivelMax"
            android:textColor="#EFA632"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/altavoz"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="279dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volume_up" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/Nivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Nivel"
            android:textColor="#EFA632"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NumNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/NumNivel"
            android:textColor="#EFA632"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/Puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Puntaje"
            android:textColor="#EFA632"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NumPuntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/NumPuntaje"
            android:textColor="#EFA632"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/frace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/singoroundedregular"
        android:text="@string/frace"
        android:textAlignment="center"
        android:textColor="#454545"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/corazon1"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_lleno"
            app:tint="#B50000" />

        <ImageView
            android:id="@+id/corazon2"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_lleno"
            app:tint="#B50000" />

        <ImageView
            android:id="@+id/corazon3"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_lleno"
            app:tint="#B50000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>